{
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.autoFixOnSave": true,
  "explorer.quitOnOpen": true,
  "explorer.openAction.strategy": "sourceWindow",
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "coc.preferences.colorSupport": true,
  "highlight.colors.enable": true,
  "cSpellExt.enableDictionaries": ["spanish"],
  "cSpell.language": "en,es",
  "list.maxHeight": 30,
  "list.autoResize": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "cSpell.diagnosticLevel": "Hint",
  "git.enableGutters": true,
  "diagnostic.warningSign": "âš ",
  "diagnostic.hintSign": "!",
  "prettier.eslintIntegration": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "css"
  ],
  "session.saveOnVimLeave": false,
  "session.directory": "~/.config/nvim/sessions/",
  "cSpell.userWords": ["Lonighi"]
}
